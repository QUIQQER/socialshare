<?xml version="1.0" encoding="UTF-8"?>
<quiqqer>
    <bricks>

        <!-- Social Share List -->
        <brick control="\QUI\Socialshare\Bricks\SocialshareList">
            <title>
                <locale group="quiqqer/socialshare"
                        var="bricks.socialshareList.title"
                />
            </title>
            <description>
                <locale group="quiqqer/socialshare"
                        var="bricks.socialshareList.description"
                />
            </description>

            <settings>

                <!-- show label -->
                <setting name="socialshare.brick.settings.showLabel" type="checkbox">
                    <text>
                        <locale group="quiqqer/socialshare"
                                var="socialshare.settings.general.showLabel"/>
                    </text>
                </setting>

                <!-- show icon  -->
                <setting name="socialshare.brick.settings.showIcon" type="checkbox">
                    <text>
                        <locale group="quiqqer/socialshare"
                                var="socialshare.settings.general.showIcon"/>
                    </text>
                </setting>

                <!-- theme -->
                <setting name="socialshare.brick.settings.theme" type="select">
                    <text>
                        <locale group="quiqqer/socialshare"
                                var="socialshare.settings.general.theme"/>
                    </text>
                    <option value="">
                        <locale group="quiqqer/socialshare"
                                var="socialshare.settings.general.theme.default"/>
                    </option>
                    <option value="classic">
                        <locale group="quiqqer/socialshare"
                                var="socialshare.settings.general.theme.classic"/>
                    </option>
                    <option value="flat">
                        <locale group="quiqqer/socialshare"
                                var="socialshare.settings.general.theme.flat"/>
                    </option>
                    <option value="minima">
                        <locale group="quiqqer/socialshare"
                                var="socialshare.settings.general.theme.minima"/>
                    </option>
                </setting>

            </settings>
        </brick>

    </bricks>
</quiqqer>
