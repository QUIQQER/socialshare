<?xml version="1.0" encoding="UTF-8"?>
<site>


    <locale group="quiqqer/socialshare" var="admin.types.socialshare"/>
    <desc>
        <locale group="quiqqer/socialshare" var="admin.types.socialshare.desc"/>
    </desc>

    <!-- extra attributes -->
    <attributes>
        <attribute>quiqqer.socialshare.title</attribute>
        <attribute>quiqqer.socialshare.description</attribute>
        <attribute>quiqqer.socialshare.type</attribute>
        <attribute>quiqqer.socialshare.author</attribute>
        <attribute>quiqqer.socialshare.image</attribute>
    </attributes>

    <!-- extend meta settings -->
    <window>
        <tab name="meta-settings">
            <text>
                <locale group="quiqqer/meta" var="quiqqer.meta.settings.title"/>
            </text>

            <categories>
                <category>
                    <settings>
                        <title>
                            <locale group="quiqqer/socialshare"
                                    var="quiqqer.socialshare.settings.title"/>
                        </title>

                        <input conf="quiqqer.socialshare.title">
                            <text>
                                <locale group="quiqqer/socialshare"
                                        var="quiqqer.socialshare.title.text"/>
                            </text>
                        </input>

                        <input conf="quiqqer.socialshare.description">
                            <text>
                                <locale group="quiqqer/socialshare"
                                        var="quiqqer.socialshare.description.text"/>
                            </text>
                        </input>

                        <select conf="quiqqer.socialshare.type">
                            <text>
                                <locale group="quiqqer/socialshare"
                                        var="quiqqer.socialshare.type.text"/>
                            </text>

                            <option value="website">
                                <locale group="quiqqer/socialshare"
                                        var="quiqqer.socialshare.type.website"/>
                            </option>
                            <option value="article">
                                <locale group="quiqqer/socialshare"
                                        var="quiqqer.socialshare.type.article"/>
                            </option>
                            <option value="movie">
                                <locale group="quiqqer/socialshare"
                                        var="quiqqer.socialshare.type.movie"/>
                            </option>
                            <option value="blog">
                                <locale group="quiqqer/socialshare"
                                        var="quiqqer.socialshare.type.blog"/>
                            </option>
                        </select>

                        <input conf="quiqqer.socialshare.author">
                            <text>
                                <locale group="quiqqer/socialshare"
                                        var="quiqqer.socialshare.author.text"/>
                            </text>
                        </input>

                        <input conf="quiqqer.socialshare.image" data-qui="controls/projects/project/media/Input">
                            <text>
                                <locale group="quiqqer/socialshare"
                                        var="quiqqer.socialshare.image.text"/>
                            </text>
                            <description>
                                <locale group="quiqqer/socialshare"
                                        var="quiqqer.socialshare.image.description"/>
                            </description>
                        </input>
                    </settings>
                </category>
            </categories>

        </tab>
    </window>
</site>
