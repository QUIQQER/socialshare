                                    <locale group="quiqqer/socialshare"
                                            var="socialshare.settings.general.standardImage"/>
                                </text>
                                <description>
                                    <locale group="quiqqer/socialshare"
                                            var="socialshare.settings.general.standardImage.desc"/>
